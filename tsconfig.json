{
	"compilerOptions": {
		"target": "ES2023",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"outDir": "dist",
		"noEmit": true,
		"verbatimModuleSyntax": true,
		"rewriteRelativeImportExtensions": true,
		"types": ["vite/client", "vitest/globals"]
	},
	"include": ["src/**/*.js", "src/**/*.ts", "src/**/*.svelte", "tests/**/*.js"]
}
