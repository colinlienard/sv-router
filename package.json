{
	"name": "sv-router",
	"version": "0.0.4",
	"description": "Modern Svelte routing",
	"keywords": [
		"svelte",
		"router",
		"spa"
	],
	"homepage": "https://github.com/colinlienard/sv-router",
	"bugs": {
		"url": "https://github.com/colinlienard/sv-router/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/colinlienard/sv-router.git"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": "./src/index.js",
			"svelte": "./src/index.js",
			"types": "./src/index.d.ts"
		},
		"./vite-plugin": {
			"import": "./src/vite-plugin/index.js",
			"types": "./src/vite-plugin/index.d.ts"
		}
	},
	"bin": "./src/cli/index.js",
	"files": [
		"src"
	],
	"scripts": {
		"ex:config-based": "pnpm --filter config-based-example",
		"ex:file-based": "pnpm --filter file-based-example",
		"test": "vitest",
		"check": "tsc --noEmit && pnpm -r check",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --check",
		"format:fix": "prettier . --write",
		"changeset": "changeset"
	},
	"dependencies": {
		"esm-env": "^1.2.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.10",
		"@eslint/js": "^9.16.0",
		"@types/node": "^22.10.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^2.46.1",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^15.13.0",
		"prettier": "^3.4.2",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-svelte": "^3.3.2",
		"type-testing": "^0.2.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vite": "^6.0.3",
		"vitest": "^2.1.8"
	},
	"peerDependencies": {
		"svelte": "^5"
	},
	"packageManager": "pnpm@9.15.0"
}
